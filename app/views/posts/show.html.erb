<h2><%= @post.name %></h2>
<h3><%= @post.title %></h3>

 <br>
<h3><%= @post.content %></h3>
<%= image_tag "#{@post.avatar}" %>

<p><%= link_to "Edit Post", edit_post_path(@post) %></p>
<p><%= link_to "Delete Post", post_path(@post), :data => {:confirm => "Are you sure you want to delete this post?", :method => "delete"} %></p>

<h3>Comments</h3>
<p><%= link_to "Add Comment", new_post_comment_path(@post)%></p>

<% @post.comments.each do |comment| %>
<p><%= comment.content %></p>
<p><%= link_to "Delete Comment", post_comment_path(@post, comment), :data => {:confirm => "Are you sure you want to delete this comment?", :method => "delete"} %></p>
<% end %>
